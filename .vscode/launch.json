{
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/src/index.ts",
      "runtimeExecutable": "ts-node-dev",
      "runtimeArgs": [
        "--respawn",
        "--transpile-only",
        "--require",
        "tsconfig-paths/register"
      ],
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}"
    }
  ]
}